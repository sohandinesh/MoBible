<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.example"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>MoBible</name>
	
	<icon src="images/icon.png" />

    <description>
        MoBible brings you God's word and a message to your mobile phones daily in audio form, to help you catch in on Gods word for the day. 
    </description>

    <author href="http://www.backtothebible.lk" email="mobible@backtothebible.lk">
        Dinesh Silva 
    </author>
	
	<preference name="fullscreen" value="true" />
	<preference name="target-device" value="universal" />
	<preference name="orientation" value="portrait" />
	<preference name="InAppBrowserStorageEnabled" value="true" />
	
	<feature name="Storage">
      <param name="android-package" value="org.apache.cordova.Storage"/>
    </feature>

</widget>